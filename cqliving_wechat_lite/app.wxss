/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 
image{
  width: 100%;
  height: 100%;
}
page{
  font-family: 'Microsoft Yahei';
  font-size: 32rpx;
}
audio,video{
    display: block;
}
.with_tab{
    padding-top: 80rpx;
}
.news{
  padding: 0 4%;
}
.topic_list {
    width: 100%;
    padding: 1em 0;
    border-bottom: 1px solid #ddd;
    position: relative;
    float: left;
}
.topic_list .topic_list_pic {
    width: 30%;
    background: #eee;
    float: left;
}
.topic_list .topic_list_pic image{
  height: 100%;
  width: 100%;
}
.topic_list .topic_list_content {
    float: left;
    width: 68%;
    margin-left: 2%;
    position: relative;
}
.topic_list .topic_list_content ul {
    width: 100%;
    display: block;
    margin-top: .5em;
}
.topic_list .topic_list_content ul li {
    width: 32%;
    height: 100%;
    background: #eee;
    display: inline-block;
    margin-right: 2%;
}
.topic_list .topic_list_content ul li:last-child {
    margin-right: 0;
}
.topic_list .topic_list_content .topic_list_bigpic {
    width: 100%;
    margin-top: .5em;
    position: relative;
}
.topic_list_1 .topic_list_content {
    padding: 0;
    width: 100%;
    margin: 0;
}
.topic_list_content .content_info {
    color: #999;
    margin-top: 10rpx;
    font-size: 26rpx;
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: right;
}
.topic_list_1  .content_info{
    margin-top: 30rpx;
    position: relative;
    width: 100%;
    text-align: right;
}
.topic_list_content .content_info .view_span{
    float: left;
}
.topic_list_content .content_info .view_span:before{
  content:"";
  width: 34rpx;
  height: 34rpx;
  background: url(http://images.cqliving.com/wx/xiaochengxu/views.png) center no-repeat;
  background-size: contain;
  display: inline-block;
  vertical-align: top;
  margin-right: 12rpx;
}
.topic_list .content_info .topic_label {
    font-size: 20rpx;
    border: 2rpx solid #ec4b4b;
    color: #ec4b4b;
    border-radius: 10rpx;
    padding: 0rpx 8rpx;
    margin-right: 12rpx;
    float: left;
}
.video_list{
    width:100%;
}
.video_list .picture{
   position: relative;
}
.video_list image{
    display: block;
}
.video_list .mask{
    position: absolute;
}
.video_list .inner_content{
    margin: 0 32rpx;
    padding: 32rpx 0;
}
.video_list .content_info{
    color:#999;
    margin-top:20rpx;
    font-size:26rpx;
    width:100%;
    text-align: right;
}
.video_list .content_info .time_span{
    float: left;
}
.video_list .content_info .view_span::before {
    content:"";
    width:34rpx;
    height:34rpx;
    background:url(http://images.cqliving.com/wx/xiaochengxu/views.png) center no-repeat;
    background-size:contain;
    display:inline-block;
    vertical-align:top;
    margin-right:12rpx;
}
.video_list .content_info .more_span{
    width:34rpx;
    height:34rpx;
    background:url(http://images.cqliving.com/wx/xiaochengxu/more.png) center no-repeat;
    background-size:contain;
    display:inline-block;
    vertical-align:top;
    margin-left:32rpx;
}

/* 显示/隐藏 */
.none {
  display: none;
}
.block {
  display: block;
}
/* 不显示滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.loading_view {
    width: 100%; 
    height: 50rpx; 
    text-align: center; 
    clear:both; 
    padding:20rpx 0;
}
.loading_view image {
    width: 28rpx; 
    height: 28rpx;
}
.loading_view text {
    padding-left:16rpx; 
    color:#999; 
    font-size:24rpx;
    position: relative;
    top:-2px;
}